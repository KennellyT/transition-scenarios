<!--
This input file simulates
the paper Standards Verification of Fuel Cycle Modeling
by Feng et al. (2016)
-->
<simulation>
    <control>
        <!-- 2015 to 2115 -->
        <startmonth>6</startmonth>
        <startyear>2014</startyear>
        <!-- Timestep is half a year now -->
        <dt>15768000</dt>
        <duration>201</duration>
        <decay>manual</decay>
    </control>
    <archetypes>
        <spec>
            <lib>cycamore</lib>
            <name>Source</name>
        </spec>
        <spec>
            <lib>cycamore</lib>
            <name>Sink</name>
        </spec>
        <spec>
            <lib>cycamore</lib>
            <name>Reactor</name>
        </spec>
        <spec>
            <lib>agents</lib>
            <name>NullRegion</name>
        </spec>
        <spec>
            <lib>agents</lib>
            <name>NullInst</name>
        </spec>
        <spec>
            <lib>cycamore</lib>
            <name>DeployInst</name>
        </spec>
        <spec>
            <lib>cycamore</lib>
            <name>Separations</name>
        </spec>
        <spec>
            <lib>cycamore</lib>
            <name>Enrichment</name>
        </spec>
        <spec>
            <lib>cycamore</lib>
            <name>Mixer</name>
        </spec>
        <spec>
            <lib>cycamore</lib>
            <name>Storage</name>
        </spec>
    </archetypes>

    <facility>
        <name>sfr_mixer_sfr</name>
        <config>
            <Mixer>
                <in_streams>
                    <stream>
                        <info>
                            <mixing_ratio>0.1387</mixing_ratio>
                            <buf_size>2e100</buf_size>
                        </info>
                        <commodities>
                            <item>
                                <commodity>pu</commodity>
                                <pref>1.0</pref>
                            </item>
                        </commodities>
                    </stream>
                    <stream>
                        <info>
                            <mixing_ratio>0.8613</mixing_ratio>
                            <buf_size>2e100</buf_size>
                        </info>
                        <commodities>
                            <item>
                                <commodity>u</commodity>
                                <pref>1.0</pref>
                            </item>
                        </commodities>
                    </stream>
                </in_streams>
                <out_commod>sfr_fuel</out_commod>
                <out_buf_size>2e100</out_buf_size>
                <throughput>2e100</throughput>
            </Mixer>
        </config>
    </facility>

    <!-- MIXER END-->

    <!-- REPROCESSING: separates Pu and U from UNF -->
    <facility>
        <name>uox_reprocessing</name>
        <config>
            <Separations>
                <feed_commods>
                    <val>cooled_uox_unf</val>
                </feed_commods>
                <feedbuf_size>2e100</feedbuf_size>
                <throughput>1e6</throughput>
                <leftover_commod>uox_raffinate</leftover_commod>
                <leftoverbuf_size>2e100</leftoverbuf_size>
                <streams>
                    <item>
                        <commod>pu</commod>
                        <info>
                            <buf_size>2e100</buf_size>
                            <efficiencies>
                                <item>
                                    <comp>Pu</comp>
                                    <eff>1</eff>
                                </item>
                            </efficiencies>
                        </info>
                    </item>
                    <item>
                        <commod>u</commod>
                        <info>
                            <buf_size>2e100</buf_size>
                            <efficiencies>
                                <item>
                                    <comp>U</comp>
                                    <eff>1</eff>
                                </item>
                            </efficiencies>
                        </info>
                    </item>
                </streams>
            </Separations>
        </config>
    </facility>


    <facility>
        <name>sfr_reprocessing</name>
        <config>
            <Separations>
                <feed_commods>
                    <val>cooled_sfr_unf</val>
                </feed_commods>
                <feedbuf_size>2e100</feedbuf_size>
                <throughput>2e100</throughput>
                <leftover_commod>sfr_raffinate</leftover_commod>
                <leftoverbuf_size>2e100</leftoverbuf_size>
                <streams>
                    <item>
                        <commod>pu</commod>
                        <info>
                            <buf_size>2e100</buf_size>
                            <efficiencies>
                                <item>
                                    <comp>Pu</comp>
                                    <eff>1</eff>
                                </item>
                            </efficiencies>
                        </info>
                    </item>
                    <item>
                        <commod>u</commod>
                        <info>
                            <buf_size>2e100</buf_size>
                            <efficiencies>
                                <item>
                                    <comp>U</comp>
                                    <eff>1</eff>
                                </item>
                            </efficiencies>
                        </info>
                    </item>
                </streams>
            </Separations>
        </config>
    </facility>

    <!-- REPROCESSING END -->

    <!-- ENRICHMENT & SOURCE -->
    <facility>
        <name>enrichment</name>
        <config>
            <Enrichment>
                <feed_commod>natl_u</feed_commod>
                <feed_recipe>natl_u_recipe</feed_recipe>
                <product_commod>uox</product_commod>
                <tails_assay>0.0025</tails_assay>
                <tails_commod>tails</tails_commod>
                <swu_capacity>1e100</swu_capacity>
                <initial_feed>1e100</initial_feed>
            </Enrichment>
        </config>
    </facility>

    <facility>
        <name>natl_u_source</name>
        <config>
            <Source>
                <outcommod>natl_u</outcommod>
                <outrecipe>natl_u_recipe</outrecipe>
                <throughput>1e100</throughput>
            </Source>
        </config>
    </facility>

    <facility>
        <name>inf_sfr_fuel_source</name>
        <config>
            <Source>
                <outcommod>sfr_fuel_from_uox</outcommod>
                <outrecipe>sfr_fuel_recipe</outrecipe>
                <throughput>1e100</throughput>
            </Source>
        </config>
    </facility>

    <!-- ENRICHMENT & SOURCE END-->

    <!-- SINK AND STORAGE-->
    <facility>
        <name>raffinate_sink</name>
        <config>
            <Sink>
                <in_commods>
                    <val>uox_raffinate</val>
                    <val>sfr_raffinate</val>
                </in_commods>
                <capacity>1e299</capacity>
            </Sink>
        </config>
    </facility>


    <facility>
        <!-- Stores uox unf for 4years -->
        <name>uox_unf_storage</name>
        <config>
            <Storage>
                <in_commods>
                    <val>uox_unf</val>
                </in_commods>
                <!-- this is 6 because there is already a delay-->
                <!-- with moving fuel from reprocessing - mixer - reactor-->
                <residence_time>6</residence_time>
                <out_commods>
                    <val>cooled_uox_unf</val>
                </out_commods>
            </Storage>
        </config>
    </facility>



    <facility>
        <!-- Stores sfr unf for 1year-->
        <name>sfr_unf_storage</name>
        <config>
            <Storage>
                <in_commods>
                    <val>sfr_unf</val>
                </in_commods>
                <!-- this is 0 because there is already a delay-->
                <!-- with moving fuel from reprocessing - mixer - reactor-->
                <residence_time>0</residence_time>
                <out_commods>
                    <val>cooled_sfr_unf</val>
                </out_commods>
            </Storage>
        </config>
    </facility>


    <facility>
        <name>tails_storage</name>
        <config>
            <Storage>
                <in_commods>
                    <val>tails</val>
                </in_commods>
                <out_commods>
                    <val>dep_u</val>
                </out_commods>
            </Storage>
        </config>
    </facility>

    <!-- SINK AND STORAGE END-->


    <facility>
        <name>sfr_fuel_temp</name>
        <config>
            <Storage>
                <in_commods>
                    <val>sfr_fuel</val>
                </in_commods>
                <out_commods>
                    <val>sfr_fuel_real</val>
                </out_commods>
            </Storage>
        </config>
    </facility>

    <facility>
        <name>sfr_fuel_from_sfr_temp</name>
        <config>
            <Storage>
                <in_commods>
                    <val>sfr_fuel_from_sfr</val>
                </in_commods>
                <out_commods>
                    <val>sfr_fuel_from_sfr_real</val>
                </out_commods>
            </Storage>
        </config>
    </facility>


    <!-- REACTORS -->
    <facility>
        <name>sfr</name>
        <config>
            <Reactor>
                <fuel_inrecipes>
                    <val>sfr_fuel_recipe</val>
                </fuel_inrecipes>
                <fuel_outrecipes>
                    <val>sfr_used_fuel_recipe</val>
                </fuel_outrecipes>
                <fuel_incommods>
                    <val>sfr_fuel</val>
                </fuel_incommods>
                <fuel_outcommods>
                    <val>sfr_unf</val>
                </fuel_outcommods>
                <cycle_time>2</cycle_time>
                <refuel_time>0</refuel_time>
                <assem_size>3950</assem_size>
                <n_assem_core>4</n_assem_core>
                <n_assem_batch>1</n_assem_batch>
                <power_cap>333.3</power_cap>
            </Reactor>
        </config>
    </facility>

    <facility>
        <name>lwr</name>
        <config>
            <Reactor>
                <fuel_inrecipes>
                    <val>uox_fuel_recipe</val>
                </fuel_inrecipes>
                <fuel_outrecipes>
                    <val>uox_used_fuel_recipe</val>
                </fuel_outrecipes>
                <fuel_incommods>
                    <val>uox</val>
                </fuel_incommods>
                <fuel_outcommods>
                    <val>uox_unf</val>
                </fuel_outcommods>
                <fuel_prefs>
                    <val>1.0</val>
                </fuel_prefs>
                <cycle_time>2</cycle_time>
                <refuel_time>0</refuel_time>
                <assem_size>19910</assem_size>
                <!-- Batches are 4.5??? -->
                <n_assem_core>5</n_assem_core>
                <n_assem_batch>1</n_assem_batch>
                <power_cap>1000</power_cap>
            </Reactor>
        </config>
    </facility>

    <!-- REACTORS END -->

